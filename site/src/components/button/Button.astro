---
export interface Props {
	text: string;
  style?: 'primary' | 'secondary',
  type?: 'button' | 'submit',
  href?: string
}

const { text, style = 'primary', href } = Astro.props;
const classNames = [ 'btn', `btn__${style}` ];
if (href) {
  classNames.push('btn__anchor');
}
---

<!-- Template -->
{
  href &&
  <a class={classNames.join(' ')}
     href={href}
  >
    {text}
  </a>
}

{
  !href &&
  <button class={classNames.join(' ')}>{text}</button>
}

<!-- Scoped styles -->
<style lang="scss">
  @use './Button.scss' as *;

  .btn {
    @include button-styles();
  }
</style>
